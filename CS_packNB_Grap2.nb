Cell[BoxData[
 RowBox[{"CloudDeploy", "[", "\[IndentingNewLine]", 
  RowBox[{
   RowBox[{"Delayed", "[", "\[IndentingNewLine]", 
    RowBox[{"APIFunction", "[", 
     RowBox[{
      RowBox[{"{", "}"}], ",", "\[IndentingNewLine]", 
      RowBox[{
       RowBox[{"min", "=", 
        RowBox[{"RandomInteger", "[", 
         RowBox[{"{", 
          RowBox[{
           RowBox[{"-", "50"}], ",", "100"}], "}"}], "]"}]}], ";", 
       "\[IndentingNewLine]", 
       RowBox[{"max", "=", 
        RowBox[{"min", "+", 
         RowBox[{"RandomInteger", "[", 
          RowBox[{"{", 
           RowBox[{"5", ",", "120"}], "}"}], "]"}]}]}], ";", 
       "\[IndentingNewLine]", 
       RowBox[{"peak", "=", 
        RowBox[{"RandomChoice", "[", 
         RowBox[{"Range", "[", 
          RowBox[{
           RowBox[{"min", "+", "1"}], ",", 
           RowBox[{"max", "-", "1"}]}], "]"}], "]"}]}], ";", 
       "\[IndentingNewLine]", 
       RowBox[{"triFun", "=", 
        RowBox[{"PDF", "[", 
         RowBox[{
          RowBox[{"TriangularDistribution", "[", 
           RowBox[{
            RowBox[{"{", 
             RowBox[{"min", ",", "max"}], "}"}], ",", "peak"}], "]"}], ",", 
          "x"}], "]"}]}], ";", "\[IndentingNewLine]", 
       RowBox[{"cutHt", "=", "\"\<dog\>\""}], ";", "\[IndentingNewLine]", 
       RowBox[{"While", "[", 
        RowBox[{
         RowBox[{
          RowBox[{" ", "!"}], 
          RowBox[{"NumberQ", "[", "cutHt", "]"}]}], ",", 
         "\[IndentingNewLine]", 
         RowBox[{
          RowBox[{"cut", "=", 
           RowBox[{"RandomChoice", "[", 
            RowBox[{"Range", "[", 
             RowBox[{"min", ",", "max"}], "]"}], "]"}]}], ";", 
          "\[IndentingNewLine]", 
          RowBox[{"cutHt", "=", 
           RowBox[{
            RowBox[{"If", "[", 
             RowBox[{
              RowBox[{"cut", "<", "peak"}], ",", "\[IndentingNewLine]", 
              RowBox[{"FindMaximum", "[", 
               RowBox[{
                RowBox[{"{", 
                 RowBox[{"triFun", ",", 
                  RowBox[{"min", "<", "x", "<", "cut"}]}], "}"}], ",", 
                RowBox[{"{", 
                 RowBox[{"x", ",", "min"}], "}"}]}], "]"}], ",", 
              "\[IndentingNewLine]", 
              RowBox[{"FindMaximum", "[", 
               RowBox[{
                RowBox[{"{", 
                 RowBox[{"triFun", ",", 
                  RowBox[{"cut", "<", "x", "<", "max"}]}], "}"}], ",", 
                RowBox[{"{", 
                 RowBox[{"x", ",", "cut"}], "}"}]}], "]"}]}], "]"}], "[", 
            RowBox[{"[", "1", "]"}], "]"}]}]}]}], "]"}], ";", 
       "\[IndentingNewLine]", 
       RowBox[{"aboveQ", "=", 
        RowBox[{"If", "[", 
         RowBox[{
          RowBox[{
           RowBox[{"RandomInteger", "[", "]"}], "\[Equal]", "1"}], ",", 
          "True", ",", "False"}], "]"}]}], ";", "\[IndentingNewLine]", 
       RowBox[{"ansNo", "=", 
        RowBox[{"ToString", "[", 
         RowBox[{"Round", "[", 
          RowBox[{
           RowBox[{"If", "[", 
            RowBox[{
             RowBox[{"cut", "<", "peak"}], ",", "\[IndentingNewLine]", 
             RowBox[{"If", "[", 
              RowBox[{"aboveQ", ",", "\[IndentingNewLine]", 
               RowBox[{"1", "-", 
                RowBox[{"Area", "[", 
                 RowBox[{"Triangle", "[", 
                  RowBox[{"{", 
                   RowBox[{
                    RowBox[{"{", 
                    RowBox[{"min", ",", "0"}], "}"}], ",", 
                    RowBox[{"{", 
                    RowBox[{"cut", ",", "0"}], "}"}], ",", 
                    RowBox[{"{", 
                    RowBox[{"cut", ",", "cutHt"}], "}"}]}], "}"}], "]"}], 
                 "]"}]}], ",", "\[IndentingNewLine]", 
               RowBox[{"Area", "[", 
                RowBox[{"Triangle", "[", 
                 RowBox[{"{", 
                  RowBox[{
                   RowBox[{"{", 
                    RowBox[{"min", ",", "0"}], "}"}], ",", 
                   RowBox[{"{", 
                    RowBox[{"cut", ",", "0"}], "}"}], ",", 
                   RowBox[{"{", 
                    RowBox[{"cut", ",", "cutHt"}], "}"}]}], "}"}], "]"}], 
                "]"}]}], "]"}], ",", "\[IndentingNewLine]", 
             RowBox[{"If", "[", 
              RowBox[{"aboveQ", ",", "\[IndentingNewLine]", 
               RowBox[{"Area", "[", 
                RowBox[{"Triangle", "[", 
                 RowBox[{"{", 
                  RowBox[{
                   RowBox[{"{", 
                    RowBox[{"cut", ",", "0"}], "}"}], ",", 
                   RowBox[{"{", 
                    RowBox[{"max", ",", "0"}], "}"}], ",", 
                   RowBox[{"{", 
                    RowBox[{"cut", ",", "cutHt"}], "}"}]}], "}"}], "]"}], 
                "]"}], ",", "\[IndentingNewLine]", 
               RowBox[{"1", "-", 
                RowBox[{"Area", "[", 
                 RowBox[{"Triangle", "[", 
                  RowBox[{"{", 
                   RowBox[{
                    RowBox[{"{", 
                    RowBox[{"cut", ",", "0"}], "}"}], ",", 
                    RowBox[{"{", 
                    RowBox[{"max", ",", "0"}], "}"}], ",", 
                    RowBox[{"{", 
                    RowBox[{"cut", ",", "cutHt"}], "}"}]}], "}"}], "]"}], 
                 "]"}]}]}], "]"}]}], "]"}], ",", ".001"}], "]"}], "]"}]}], 
       ";", "\[IndentingNewLine]", 
       RowBox[{"ansNo", "=", 
        RowBox[{"StringReplace", "[", 
         RowBox[{"ansNo", ",", 
          RowBox[{"\"\<0.\>\"", "\[Rule]", "\"\<.\>\""}]}], "]"}]}], ";", 
       "\[IndentingNewLine]", 
       RowBox[{"q", "=", 
        RowBox[{"Style", "[", 
         RowBox[{
          RowBox[{"StringForm", "[", 
           RowBox[{
           "\"\<According to this triangle distribution graph, what is the \
probability that `1` will be `2` than `3`?\>\"", ",", 
            RowBox[{"Style", "[", 
             RowBox[{"\"\<A\>\"", ",", "Italic"}], "]"}], ",", 
            RowBox[{"If", "[", 
             RowBox[{"aboveQ", ",", "\"\<greater\>\"", ",", "\"\<less\>\""}], 
             "]"}], ",", "cut"}], "]"}], ",", 
          RowBox[{"TextAlignment", "\[Rule]", "Center"}]}], "]"}]}], ";", 
       "\[IndentingNewLine]", 
       RowBox[{"choices", "=", 
        RowBox[{"{", "}"}]}], ";", "\[IndentingNewLine]", 
       RowBox[{"While", "[", 
        RowBox[{
         RowBox[{
          RowBox[{"Length", "[", "choices", "]"}], "<", "4"}], ",", 
         "\[IndentingNewLine]", 
         RowBox[{
          RowBox[{"choices", "=", 
           RowBox[{"{", "}"}]}], ";", "\[IndentingNewLine]", 
          RowBox[{"dists", "=", 
           RowBox[{"RandomReal", "[", 
            RowBox[{
             RowBox[{"{", 
              RowBox[{"0", ",", "1"}], "}"}], ",", "3"}], "]"}]}], ";", 
          "\[IndentingNewLine]", 
          RowBox[{"If", "[", 
           RowBox[{
            RowBox[{
             RowBox[{"RandomInteger", "[", 
              RowBox[{"{", 
               RowBox[{"1", ",", "100"}], "}"}], "]"}], ">", "97"}], ",", 
            RowBox[{
             RowBox[{"dists", "[", 
              RowBox[{"[", "1", "]"}], "]"}], "=", 
             RowBox[{
              RowBox[{"dists", "[", 
               RowBox[{"[", "1", "]"}], "]"}], "+", "1"}]}]}], "]"}], ";", 
          "\[IndentingNewLine]", 
          RowBox[{"If", "[", 
           RowBox[{
            RowBox[{
             RowBox[{"RandomInteger", "[", 
              RowBox[{"{", 
               RowBox[{"1", ",", "100"}], "}"}], "]"}], ">", "97"}], ",", 
            RowBox[{
             RowBox[{"dists", "[", 
              RowBox[{"[", "2", "]"}], "]"}], "=", 
             RowBox[{
              RowBox[{"dists", "[", 
               RowBox[{"[", "2", "]"}], "]"}], "-", "1"}]}]}], "]"}], ";", 
          "\[IndentingNewLine]", 
          RowBox[{"choices", "=", 
           RowBox[{"DeleteDuplicates", "[", 
            RowBox[{"Prepend", "[", 
             RowBox[{
              RowBox[{
               RowBox[{
                RowBox[{"StringReplace", "[", 
                 RowBox[{
                  RowBox[{"ToString", "[", 
                   RowBox[{"Round", "[", 
                    RowBox[{"#", ",", ".001"}], "]"}], "]"}], ",", 
                  RowBox[{"\"\<0.\>\"", "\[Rule]", "\"\<.\>\""}]}], "]"}], 
                "&"}], " ", "/@", " ", "dists"}], ",", "ansNo"}], "]"}], 
            "]"}]}]}]}], "]"}], ";", "\[IndentingNewLine]", 
       RowBox[{"mixed", "=", 
        RowBox[{"RandomSample", "[", "choices", "]"}]}], ";", 
       "\[IndentingNewLine]", 
       RowBox[{"ans", "=", 
        RowBox[{
         RowBox[{"Position", "[", 
          RowBox[{"mixed", ",", 
           RowBox[{"choices", "[", 
            RowBox[{"[", "1", "]"}], "]"}]}], "]"}], "[", 
         RowBox[{"[", 
          RowBox[{"1", ",", "1"}], "]"}], "]"}]}], ";", "\[IndentingNewLine]", 
       RowBox[{"pic", "=", 
        RowBox[{"Plot", "[", 
         RowBox[{"triFun", ",", 
          RowBox[{"{", 
           RowBox[{"x", ",", "min", ",", "max"}], "}"}], ",", 
          RowBox[{"PlotStyle", "\[Rule]", 
           RowBox[{"{", 
            RowBox[{
             RowBox[{"RGBColor", "[", "\"\<#70002B\>\"", "]"}], ",", 
             "Thick"}], "}"}]}], ",", 
          RowBox[{"Filling", "\[Rule]", "Axis"}], ",", 
          RowBox[{"FillingStyle", "\[Rule]", 
           RowBox[{"RGBColor", "[", "\"\<#FF7FB0\>\"", "]"}]}], ",", 
          RowBox[{"AxesStyle", "\[Rule]", 
           RowBox[{"Directive", "[", "15", "]"}]}], ",", 
          RowBox[{"AxesOrigin", "\[Rule]", 
           RowBox[{"{", 
            RowBox[{"min", ",", "0"}], "}"}]}], ",", 
          RowBox[{"AxesLabel", "\[Rule]", 
           RowBox[{"{", "A", "}"}]}], ",", 
          RowBox[{"LabelStyle", "\[Rule]", "Black"}], ",", 
          RowBox[{"Exclusions", "\[Rule]", "None"}], ",", 
          RowBox[{"ImageSize", "\[Rule]", 
           RowBox[{"{", 
            RowBox[{
             RowBox[{"{", "480", "}"}], ",", 
             RowBox[{"{", "540", "}"}]}], "}"}]}]}], "]"}]}], ";", 
       "\[IndentingNewLine]", 
       RowBox[{
        RowBox[{"InputForm", "[", 
         RowBox[{"{", 
          RowBox[{"q", ",", "ans", ",", "mixed", ",", "pic"}], "}"}], "]"}], 
        "&"}]}]}], "]"}], "]"}], ",", "\[IndentingNewLine]", 
   "\"\<CS_pack_Grap2\>\"", ",", 
   RowBox[{"Permissions", "\[Rule]", "\"\<Public\>\""}]}], "]"}]], "Input",
